<xml>

    <layout>
        <name>Default pages template</name>
        <notes><![CDATA[The [content] block in cell 1 is locked. It cannot be removed or repositioned. Other blocks may be added to or removed from cell 1.]]></notes>
        <controller>pages</controller>
        <skin>default</skin>
        <cells>
            <row>
                <cell class="span8">
                    <block value="[content]" locked="1" />
                </cell>
                <cell class="span4"></cell>
            </row>
        </cells>
        <template>pages.default.layout.php</template>
    </layout>
    
    <layout>
        <name>Home page template</name>
        <notes><![CDATA[Cell 1 is completely locked. Nothing can be removed from it or added to it. Cell 3 may contain at most one block. Cell 4 is limited to two blocks.]]></notes>
        <controller>pages</controller>
        <skin>home</skin>
        <cells>
            <row>
                <cell class="span8" protected="1">
                    <block value="[content]" locked="1" />
                </cell>
                <cell class="span4" />
            </row>
            <row>
                <cell class="span3" limit="1" />
                <cell class="span3" limit="2" />
                <cell class="span3" />
                <cell class="span3" />
            </row>
            <row>
                <cell class="span12" />
            </row>
        </cells>
        <template>pages.home.layout.php</template>
    </layout>
    
    <layout>
        <name>Pages skin 1 template</name>
        <notes><![CDATA[The [content] block in cell 1 is locked. It cannot be removed or repositioned. Other blocks may be added to or removed from cell 1.]]></notes>
        <controller>pages</controller>
        <skin>skin1</skin>
        <cells>
            <row>
                <cell class="span8">
                    <block value="[content]" locked="1" />
                </cell>
                <cell class="span4"></cell>
            </row>
            <row>
                <cell class="span6"></cell>
                <cell class="span6"></cell>
            </row>
        </cells>
        <template>pages.skin1.layout.php</template>
    </layout>
    
</xml>